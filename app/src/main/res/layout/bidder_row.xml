<RelativeLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/lbBuyer"
    android:layout_marginTop="@dimen/_5sdp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/lbBidderName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_8sdp"
        android:layout_toStartOf="@+id/ivBidder"
        android:fontFamily="@font/tajawal_bold"
        android:text="اسم المزايد"
        android:textColor="@color/black_grey"
        android:textSize="@dimen/_12ssp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/lbBidderTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lbBidderName"
        android:layout_marginEnd="@dimen/_8sdp"
        android:layout_toStartOf="@+id/ivBidder"
        android:fontFamily="@font/tajawal_medium"
        android:text="13:59:00"
        android:layout_marginTop="@dimen/_5sdp"
        android:textColor="@color/grey"
        android:textSize="@dimen/_12ssp"
        android:textStyle="normal" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/ivBidder"
        android:layout_width="@dimen/_35sdp"
        android:layout_height="@dimen/_35sdp"
        android:layout_alignParentEnd="true"
        android:src="@drawable/person1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/text_bg"
        android:textSize="@dimen/_18ssp"
        android:text="+20"
        android:fontFamily="@font/tajawal_bold"
        android:textStyle="bold"
        android:textColor="@color/yellow"
        android:gravity="center_horizontal"
        android:layout_marginStart="@dimen/_8sdp"/>

</RelativeLayout>