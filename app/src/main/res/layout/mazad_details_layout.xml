<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/_8sdp">

    <RelativeLayout
        android:id="@+id/rlBidName"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_8sdp">

        <TextView
            android:id="@+id/lbBidName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/_8sdp"
            android:fontFamily="@font/tajawal_bold"
            android:text="اسم المزاد"
            android:textColor="@color/black_grey"
            android:textSize="@dimen/_18ssp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="@dimen/_8sdp"
            android:drawableStart="@drawable/previous"
            android:drawablePadding="@dimen/_8sdp"
            android:fontFamily="@font/tajawal_medium"
            android:text="تفاصيل المزاد"
            android:textColor="@color/pink"
            android:textSize="@dimen/_12ssp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lbBidderTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lbBidName"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:fontFamily="@font/tajawal_medium"
            android:text="Code 1234"
            android:textColor="@color/grey"
            android:textSize="@dimen/_12ssp"
            android:textStyle="normal" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlBidRate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rlBidName">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/_8sdp"
            android:drawableStart="@drawable/previous"
            android:drawablePadding="@dimen/_8sdp"
            android:fontFamily="@font/tajawal_medium"
            android:text="تقييم المزاد"
            android:textColor="@color/pink"
            android:textSize="@dimen/_12ssp"
            android:textStyle="bold" />
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/frCurrentValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rlBidRate">

        <TextView
            android:id="@+id/lbCurrentValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:fontFamily="@font/tajawal_bold"
            android:text="القيمة الحالية للمزاد"
            android:textColor="@color/grey"
            android:textSize="@dimen/_11ssp" />

        <TextView
            android:id="@+id/lbCurrentValueData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginTop="@dimen/_8sdp"
            android:fontFamily="@font/tajawal_bold"
            android:paddingHorizontal="@dimen/_8sdp"
            android:text="2000 $"
            android:textColor="@color/black_purple"
            android:textSize="@dimen/_16ssp"
            android:textStyle="bold" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/frCurrentValueBeforeTax"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/frCurrentValue">

        <TextView
            android:id="@+id/lbCurrentValueBeforeTax"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:fontFamily="@font/tajawal_bold"
            android:text="القيمة الحالية للمزاد بعد الضريبة"
            android:textColor="@color/grey"
            android:textSize="@dimen/_11ssp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/lbCurrentValueBeforeTaxDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:fontFamily="@font/tajawal_bold"
            android:paddingHorizontal="@dimen/_8sdp"
            android:text="2000 $"
            android:textColor="@color/black_purple"
            android:textSize="@dimen/_16ssp"
            android:textStyle="bold" />

    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_90sdp"
        android:layout_below="@+id/frCurrentValueBeforeTax"
        android:background="@drawable/mazad_bg"
        android:padding="@dimen/_8sdp">

        <TextView
            android:id="@+id/lbWithdraw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/pink_label"
            android:layout_marginEnd="@dimen/_8sdp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:fontFamily="@font/tajawal_bold"
            android:text="انسحاب"
            android:gravity="center"
            android:textColor="@color/pink"
            android:textSize="@dimen/_12ssp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/lbWithdraw"
            android:background="@drawable/gradient_pink_label"
            android:text="شراء الأن"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/_12ssp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/lbPayPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/_8sdp"
            android:fontFamily="@font/tajawal_bold"
            android:text="سعر الشراء الفوري"
            android:textColor="@color/black_grey"
            android:textSize="@dimen/_12ssp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/lbPayPriceValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/_8sdp"
            android:fontFamily="@font/tajawal_bold"
            android:text="200 $"
            android:layout_below="@+id/lbPayPrice"
            android:textColor="@color/black_grey"
            android:textSize="@dimen/_18ssp"
            android:textStyle="bold" />

    </RelativeLayout>
</RelativeLayout>